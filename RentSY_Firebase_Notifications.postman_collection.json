{
  "info": {
    "name": "RentSY - Firebase Notifications Testing",
    "description": "مجموعة كاملة لاختبار Firebase Push Notifications",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "YOUR_AUTH_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "fcm_token",
      "value": "YOUR_FCM_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "0. Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"0912345678\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        }
      ]
    },
    {
      "name": "1. FCM Token Management",
      "item": [
        {
          "name": "Update FCM Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fcm_token\": \"{{fcm_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/fcm-token",
              "host": ["{{base_url}}"],
              "path": ["fcm-token"]
            }
          }
        },
        {
          "name": "Check My Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/test-notifications/check-my-token",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "check-my-token"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Firebase Status",
      "item": [
        {
          "name": "Check Firebase Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/test-notifications/firebase-status",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "firebase-status"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Send Notifications",
      "item": [
        {
          "name": "Send to Me (Test)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/test-notifications/send-to-me",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "send-to-me"]
            }
          }
        },
        {
          "name": "Send to Specific User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 2,\n  \"title\": \"إشعار تجريبي\",\n  \"body\": \"هذا إشعار تجريبي من RentSY\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/test-notifications/send-to-user",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "send-to-user"]
            }
          }
        },
        {
          "name": "Send to All Users",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"إعلان عام\",\n  \"body\": \"رسالة لجميع المستخدمين في التطبيق\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/test-notifications/send-to-all",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "send-to-all"]
            }
          }
        },
        {
          "name": "Send Custom Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 2,\n  \"title\": \"حجز جديد\",\n  \"body\": \"لديك حجز جديد للشقة #123\",\n  \"data\": {\n    \"type\": \"booking\",\n    \"booking_id\": 123,\n    \"apartment_id\": 456,\n    \"action\": \"view_booking\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/test-notifications/send-custom",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "send-custom"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Users Management",
      "item": [
        {
          "name": "Get Users with FCM Tokens",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/test-notifications/users-with-tokens",
              "host": ["{{base_url}}"],
              "path": ["test-notifications", "users-with-tokens"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Regular Notifications (App)",
      "item": [
        {
          "name": "Get My Notifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications",
              "host": ["{{base_url}}"],
              "path": ["notifications"]
            }
          }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/1/read",
              "host": ["{{base_url}}"],
              "path": ["notifications", "1", "read"]
            }
          }
        },
        {
          "name": "Mark All as Read",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/mark-all-read",
              "host": ["{{base_url}}"],
              "path": ["notifications", "mark-all-read"]
            }
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/unread-count",
              "host": ["{{base_url}}"],
              "path": ["notifications", "unread-count"]
            }
          }
        }
      ]
    }
  ]
}
